{
  "name": "voide-monorepo",
  "version": "0.0.1",
  "private": true,
  "description": "Voice AI Code Assistant",
  "type": "module",
  "scripts": {
    "dev": "bun run --cwd packages/app dev",
    "build": "bun run --cwd packages/app build",
    "build:all": "bun run --cwd packages/app build:all",
    "build:stores": "bun run --cwd packages/app build:stores",
    "server": "bun run --cwd packages/app server",
    "start": "bun run --cwd packages/app start",
    "preview": "bun run --cwd packages/app preview",
    "lint": "bun run --cwd packages/app lint",
    "lint:fix": "bun run --cwd packages/app lint:fix",
    "format": "bun run --cwd packages/app format",
    "format:check": "bun run --cwd packages/app format:check"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.76"
  },
  "devDependencies": {
    "@stacksjs/crosswind": "link:@stacksjs/crosswind",
    "@stacksjs/stx": "link:@stacksjs/stx",
    "better-dx": "^0.2.5",
    "bun-plugin-stx": "link:bun-plugin-stx"
  },
  "workspaces": [
    "packages/*"
  ]
}
