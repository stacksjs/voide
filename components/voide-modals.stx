              />
            </div>
          </div>

          <div id="githubConnectedInfo" class="text-center py-6" show="{{ $settingsStore.github.connected }}">
            <img id="connectedAvatar" src="{{ $settingsStore.github.avatarUrl }}" class="w-20 h-20 rounded-full mx-auto mb-4 border-2 border-monokai-green" />
            <div id="connectedName" class="text-xl font-semibold text-monokai-fg mb-1" text="{{ $settingsStore.github.name || $settingsStore.github.username }}"></div>
            <div id="connectedUsername" class="text-monokai-gray mb-3" text="{{ '@' + $settingsStore.github.username }}"></div>
            <div class="inline-flex items-center gap-2 px-3 py-1 bg-monokai-green/20 border border-monokai-green/30 rounded-full text-monokai-green text-xs">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Connected
            </div>
          </div>
        </div>

        <!-- Modal Footer -->
        <div class="flex justify-end gap-3 px-6 py-4 border-t border-monokai-border bg-monokai-bg-dark">
          <button
            class="px-4 py-2 text-sm text-monokai-gray hover:text-monokai-fg transition-colors"
            @click="voide.closeGithubModal()"
          >Cancel</button>
          <button
            id="githubConnectBtn"
            class="px-4 py-2 text-sm font-medium bg-monokai-purple text-white rounded-lg hover:bg-monokai-purple/90 transition-all"
            show="{{ !$settingsStore.github.connected }}"
            @click="voide.connectGithub()"
          >Connect</button>
          <button
            id="githubDisconnectBtn"
            class="px-4 py-2 text-sm font-medium bg-monokai-pink/20 border border-monokai-pink/30 text-monokai-pink rounded-lg hover:bg-monokai-pink/30 transition-all"
            show="{{ $settingsStore.github.connected }}"
            @click="voide.disconnectGithub()"
          >Disconnect</button>
        </div>
      </div>
    </div>
  </div>

  <!-- API Settings Modal -->
  <div
    id="settingsModal"
    class="fixed inset-0 bg-black/70 flex items-center justify-center z-50"
    show="{{ $uiStore.modals.settings }}"
    @click.self="voide.closeSettingsModal()"
  >
    <div class="w-full max-w-md m-4 animate-fade-in">
      <div class="bg-monokai-bg border border-monokai-border rounded-2xl shadow-2xl overflow-hidden">
        <!-- Modal Header -->
        <div class="flex items-center justify-between px-6 py-4 border-b border-monokai-border">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-xl bg-monokai-purple flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h2 class="text-lg font-semibold text-monokai-fg">Settings</h2>
          </div>
          <button
            class="w-8 h-8 rounded-lg flex items-center justify-center text-monokai-gray hover:text-monokai-fg hover:bg-monokai-bg-dark transition-all"
            @click="voide.closeSettingsModal()"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Modal Body -->
        <div class="p-6 space-y-4">
          <!-- Project Path -->
          <div>
            <label class="block text-sm font-medium text-monokai-fg/80 mb-2">Project Path</label>
            <div class="flex gap-2">
              <input
                type="text"
                id="projectPathInput"
                class="flex-1 bg-monokai-bg-dark border border-monokai-border rounded-xl px-4 py-3 text-sm text-monokai-fg placeholder-monokai-gray focus:border-monokai-purple focus:outline-none transition-all"
                placeholder="/path/to/your/project"
              />
              <button
                id="browseBtn"
                class="px-4 py-2 text-sm font-medium bg-monokai-bg-dark border border-monokai-border text-monokai-fg rounded-xl hover:border-monokai-gray transition-all"
                title="Browse for folder"
              >Browse</button>
            </div>
            <p class="mt-2 text-xs text-monokai-gray">Select a folder or enter the path manually</p>
          </div>

          <hr class="border-monokai-border" />

          <div>
            <label class="block text-sm font-medium text-monokai-fg/80 mb-2">Anthropic API Key</label>
            <input
              type="password"
              id="anthropicApiKey"
              class="w-full bg-monokai-bg-dark border border-monokai-border rounded-xl px-4 py-3 text-sm text-monokai-fg placeholder-monokai-gray focus:border-monokai-purple focus:outline-none transition-all"
              placeholder="sk-ant-api03-xxxxxxxxxxxx"
            />
            <p class="mt-2 text-xs text-monokai-gray">
              Get from <a href="https://console.anthropic.com/settings/keys" target="_blank" class="text-monokai-cyan hover:text-monokai-cyan/80">console.anthropic.com</a>
            </p>
          </div>

          <div>
            <label class="block text-sm font-medium text-monokai-fg/80 mb-2">OpenAI API Key <span class="text-monokai-gray">(optional)</span></label>
            <input
              type="password"
              id="openaiApiKey"
              class="w-full bg-monokai-bg-dark border border-monokai-border rounded-xl px-4 py-3 text-sm text-monokai-fg placeholder-monokai-gray focus:border-monokai-purple focus:outline-none transition-all"
              placeholder="sk-xxxxxxxxxxxx"
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-monokai-fg/80 mb-2">Claude CLI Host <span class="text-monokai-gray">(optional)</span></label>
            <input
              type="text"
              id="claudeCliHost"
              class="w-full bg-monokai-bg-dark border border-monokai-border rounded-xl px-4 py-3 text-sm text-monokai-fg placeholder-monokai-gray focus:border-monokai-purple focus:outline-none transition-all"
              placeholder="http://your-ec2-instance:3456"
            />
          </div>

          <!-- API Status -->
          <div class="p-4 bg-monokai-bg-dark border border-monokai-border rounded-xl space-y-2">
            <div class="flex items-center gap-3">
              <span id="anthropicStatus" class="w-2 h-2 rounded-full bg-monokai-gray"></span>
              <span class="text-sm text-monokai-gray">Anthropic: <span id="anthropicStatusText" class="text-monokai-fg/80">Not configured</span></span>
            </div>
            <div class="flex items-center gap-3">
              <span id="openaiStatus" class="w-2 h-2 rounded-full bg-monokai-gray"></span>
              <span class="text-sm text-monokai-gray">OpenAI: <span id="openaiStatusText" class="text-monokai-fg/80">Not configured</span></span>
            </div>
          </div>
        </div>

        <!-- Modal Footer -->
        <div class="flex justify-end gap-3 px-6 py-4 border-t border-monokai-border bg-monokai-bg-dark">
          <button
            class="px-4 py-2 text-sm text-monokai-gray hover:text-monokai-fg transition-colors"
            @click="voide.closeSettingsModal()"
          >Cancel</button>
          <button
            class="px-4 py-2 text-sm font-medium bg-monokai-purple text-white rounded-lg hover:bg-monokai-purple/90 transition-all"
            @click="voide.saveSettings()"
          >Save Settings</button>
        </div>
      </div>
    </div>
  </div>
</template>

<script client>
import { appStore, settingsStore, uiStore, chatStore } from '@stores'

(() => {
  console.log('[VoideModals] Initialized');

  // =========================================================================
  // Helper Functions
  // =========================================================================

  function addMessage(type, content, header) {
    const headerText = header || (type === 'user' ? 'You' : type === 'assistant' ? 'AI' : type === 'system' ? 'System' : 'Error');
    chatStore.addMessage(type, content, headerText);
  }

  // =========================================================================
  // Modal Open/Close
  // =========================================================================

  function openGithubModal() {
    uiStore.openModal('github');
  }

  function closeGithubModal() {
    uiStore.closeModal('github');
  }

  function openSettingsModal() {
    uiStore.openModal('settings');
  }

  function closeSettingsModal() {
    uiStore.closeModal('settings');
  }

  // =========================================================================
  // Project Path
  // =========================================================================

  const API_BASE_URL = 'http://localhost:3008/voide';

  function setProjectPath() {
    const input = document.getElementById('projectPathInput');
    const path = input ? input.value.trim() : '';

    if (!path) {
      addMessage('error', 'Please enter a project path.');
      return;
    }

    appStore.setRepoPath(path);
    settingsStore.setLastRepoPath(path);
    addMessage('system', 'Project set to: ' + path.split('/').pop());
    closeSettingsModal();
  }

  function browseForFolder() {
    fetch(API_BASE_URL + '/browse', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({})
    })
    .then(res => res.json())
    .then(data => {
      if (data.path) {
        const input = document.getElementById('projectPathInput');
        if (input) input.value = data.path;
      } else if (data.error) {
        addMessage('error', data.error);
      }
    })
    .catch(error => {
      addMessage('error', 'Browse failed. Make sure the backend is running.');
    });
  }

  // Bind buttons
  const browseBtn = document.getElementById('browseBtn');
  const projectPathInput = document.getElementById('projectPathInput');

  browseBtn?.addEventListener('click', browseForFolder);

  // Pre-fill project path
  if (projectPathInput && appStore.repoPath) {
    projectPathInput.value = appStore.repoPath;
  }

  // =========================================================================
  // API Settings
  // =========================================================================

  function saveSettings() {
    // Save project path
    const projectInput = document.getElementById('projectPathInput');
    const path = projectInput ? projectInput.value.trim() : '';
    if (path) {
      appStore.setRepoPath(path);
      settingsStore.setLastRepoPath(path);
    }

    // Save API keys
    const anthropicInput = document.getElementById('anthropicApiKey');
    const openaiInput = document.getElementById('openaiApiKey');
    const claudeHostInput = document.getElementById('claudeCliHost');

    settingsStore.setAllApiKeys({
      anthropic: anthropicInput ? anthropicInput.value.trim() || null : null,
      openai: openaiInput ? openaiInput.value.trim() || null : null,
      claudeCliHost: claudeHostInput ? claudeHostInput.value.trim() || null : null
    });

    closeSettingsModal();
    addMessage('system', path ? 'Settings saved. Project: ' + path.split('/').pop() : 'Settings saved.');
  }

  // =========================================================================
  // GitHub Connection
  // =========================================================================

  function connectGithub() {
    const tokenInput = document.getElementById('githubToken');
    const nameInput = document.getElementById('gitName');
    const emailInput = document.getElementById('gitEmail');

    const token = tokenInput ? tokenInput.value.trim() : '';
    if (!token) {
      addMessage('error', 'Please enter a GitHub personal access token.');
      return;
    }

    fetch('https://api.github.com/user', {
      headers: {
        'Authorization': 'token ' + token,
        'Accept': 'application/vnd.github.v3+json'
      }
    })
    .then((res) => {
      if (!res.ok) throw new Error('Invalid token');
      return res.json();
    })
    .then(function(user) {
      settingsStore.connectGithub({
        token: token,
        username: user.login,
        name: nameInput ? nameInput.value.trim() || user.name : user.name,
        email: emailInput ? emailInput.value.trim() || user.email : user.email,
        avatarUrl: user.avatar_url
      });
      addMessage('system', 'Connected to GitHub as @' + user.login);
      closeGithubModal();
    })
    .catch((error) => {
      addMessage('error', 'GitHub connection failed: ' + error.message);
    });
  }

  function disconnectGithub() {
    settingsStore.disconnectGithub();
    addMessage('system', 'Disconnected from GitHub.');
    closeGithubModal();
  }

  // =========================================================================
  // State Subscriptions
  // =========================================================================

  // Update modal visibility based on UI state
  uiStore.$subscribe((state) => {
    const githubModal = document.getElementById('githubModal');
    const settingsModal = document.getElementById('settingsModal');

    if (githubModal) {
      githubModal.style.display = state.modals.github ? 'flex' : 'none';
    }
    if (settingsModal) {
      settingsModal.style.display = state.modals.settings ? 'flex' : 'none';
    }
  });

  // Pre-fill settings form with current values
  settingsStore.$subscribe((state) => {
    const anthropicInput = document.getElementById('anthropicApiKey');
    const openaiInput = document.getElementById('openaiApiKey');
    const claudeHostInput = document.getElementById('claudeCliHost');
    const gitNameInput = document.getElementById('gitName');
    const gitEmailInput = document.getElementById('gitEmail');

    // Update connected info
    const connectedAvatar = document.getElementById('connectedAvatar');
    const connectedName = document.getElementById('connectedName');
    const connectedUsername = document.getElementById('connectedUsername');
    const connectForm = document.getElementById('githubConnectForm');
    const connectedInfo = document.getElementById('githubConnectedInfo');
    const connectBtn = document.getElementById('githubConnectBtn');
    const disconnectBtn = document.getElementById('githubDisconnectBtn');

    if (anthropicInput && state.apiKeys.anthropic && !anthropicInput.value) {
      anthropicInput.value = state.apiKeys.anthropic;
    }
    if (openaiInput && state.apiKeys.openai && !openaiInput.value) {
      openaiInput.value = state.apiKeys.openai;
    }
    if (claudeHostInput && state.apiKeys.claudeCliHost && !claudeHostInput.value) {
      claudeHostInput.value = state.apiKeys.claudeCliHost;
    }
    if (gitNameInput && state.github.name && !gitNameInput.value) {
      gitNameInput.value = state.github.name;
    }
    if (gitEmailInput && state.github.email && !gitEmailInput.value) {
      gitEmailInput.value = state.github.email;
    }

    // Update GitHub connected state UI
    if (state.github.connected) {
      if (connectedAvatar) connectedAvatar.src = state.github.avatarUrl || '';
      if (connectedName) connectedName.textContent = state.github.name || state.github.username;
      if (connectedUsername) connectedUsername.textContent = '@' + state.github.username;
      if (connectForm) connectForm.style.display = 'none';
      if (connectedInfo) connectedInfo.style.display = 'block';
      if (connectBtn) connectBtn.style.display = 'none';
      if (disconnectBtn) disconnectBtn.style.display = 'inline-flex';
    } else {
      if (connectForm) connectForm.style.display = 'block';
      if (connectedInfo) connectedInfo.style.display = 'none';
      if (connectBtn) connectBtn.style.display = 'inline-flex';
      if (disconnectBtn) disconnectBtn.style.display = 'none';
    }

    // Update API status indicators
    const anthropicStatus = document.getElementById('anthropicStatus');
    const openaiStatus = document.getElementById('openaiStatus');
    const anthropicStatusText = document.getElementById('anthropicStatusText');
    const openaiStatusText = document.getElementById('openaiStatusText');

    if (anthropicStatus) {
      anthropicStatus.className = 'w-2 h-2 rounded-full ' + (state.apiKeys.anthropic ? 'bg-monokai-green' : 'bg-monokai-gray');
    }
    if (openaiStatus) {
      openaiStatus.className = 'w-2 h-2 rounded-full ' + (state.apiKeys.openai ? 'bg-monokai-green' : 'bg-monokai-gray');
    }
    if (anthropicStatusText) {
      anthropicStatusText.textContent = state.apiKeys.anthropic ? 'Configured' : 'Not configured';
    }
    if (openaiStatusText) {
      openaiStatusText.textContent = state.apiKeys.openai ? 'Configured' : 'Not configured';
    }
  });

  // =========================================================================
  // Global Escape Key Handler
  // =========================================================================

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      uiStore.closeAllModals();
    }
  });

  // =========================================================================
  // Expose to window.voide
  // =========================================================================

  window.voide = window.voide || {};
  Object.assign(window.voide, {
    openGithubModal,
    closeGithubModal,
    openSettingsModal,
    closeSettingsModal,
    setProjectPath,
    saveSettings,
    connectGithub,
    disconnectGithub
  });
})();
</script>
