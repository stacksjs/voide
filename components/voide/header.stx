<header style="position:relative;padding:16px 24px;background:#221f22;border-bottom:1px solid #403e41">
  <div style="display:flex;align-items:center;justify-content:space-between">
    <!-- Logo & Title -->
    <div style="display:flex;align-items:center;gap:16px">
      <div style="width:48px;height:48px;border-radius:12px;background:#ab9df2;display:flex;align-items:center;justify-content:center;box-shadow:0 4px 12px #ab9df240">
        <span style="font-size:24px">{{ icon || 'üéôÔ∏è' }}</span>
      </div>
      <div>
        <h1 id="appTitle" style="font-size:20px;font-weight:700;background:linear-gradient(to right,#fcfcfa,#fcfcfa99);-webkit-background-clip:text;-webkit-text-fill-color:transparent">{{ title || 'Voide' }}</h1>
        <p style="font-size:12px;color:#727072">Voice AI Assistant</p>
      </div>
    </div>

    <!-- Center: Repo Input -->
    <div style="flex:1;max-width:640px;margin:0 32px">
      <div style="display:flex;align-items:center;gap:8px;background:#2d2a2e;border:1px solid #403e41;border-radius:12px;padding:10px 16px">
        <svg style="width:16px;height:16px;color:#727072" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
        </svg>
        <input
          type="text"
          id="repoInput"
          style="flex:1;background:transparent;font-size:14px;color:#fcfcfa;border:none;outline:none"
          placeholder="Enter repository URL or local path..."
          @keypress="if (event.key === 'Enter') window.voide?.handleRepoAction()"
        />
        <button
          id="cloneBtn"
          style="padding:6px 12px;font-size:12px;font-weight:500;background:#a9dc76;color:#2d2a2e;border:none;border-radius:8px;cursor:pointer"
          @click="window.voide?.handleRepoAction()"
        >
          Open
        </button>
      </div>
    </div>

    <!-- Right Controls -->
    <div style="display:flex;align-items:center;gap:12px">
      <!-- AI Driver -->
      <div style="position:relative">
        <select
          id="aiDriver"
          style="appearance:none;background:#2d2a2e;border:1px solid #403e41;border-radius:8px;padding:8px 32px 8px 12px;font-size:14px;color:#fcfcfa;cursor:pointer;outline:none"
          @change="window.voide?.handleDriverChange(event)"
        >
          <option value="claude-cli-local" selected>Claude CLI</option>
          <option value="claude-cli-ec2">Claude EC2</option>
          <option value="claude">Claude API</option>
          <option value="openai">OpenAI</option>
          <option value="ollama">Ollama</option>
          <option value="mock">Mock</option>
        </select>
        <svg style="position:absolute;right:8px;top:50%;transform:translateY(-50%);width:16px;height:16px;color:#727072;pointer-events:none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </div>

      <!-- GitHub -->
      <button
        id="githubAccount"
        style="display:flex;align-items:center;gap:8px;padding:8px 12px;background:#2d2a2e;border:1px solid #403e41;border-radius:8px;cursor:pointer"
        title="Connect GitHub"
        @click="window.voide?.openGithubModal()"
      >
        <svg style="width:20px;height:20px;color:#727072" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        <span id="githubUsername" style="font-size:12px;color:#727072">Connect</span>
      </button>

      <!-- Settings -->
      <button
        id="settingsBtn"
        style="width:40px;height:40px;display:flex;align-items:center;justify-content:center;background:#2d2a2e;border:1px solid #403e41;border-radius:8px;cursor:pointer"
        title="Settings"
        @click="window.voide?.openSettingsModal()"
      >
        <svg style="width:20px;height:20px;color:#727072" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
      </button>
    </div>
  </div>
</header>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const stores = window.VoideStores
  if (!stores) return

  // Subscribe to settings store for GitHub status updates
  stores.settingsStore.subscribe((state) => {
    const githubUsername = document.getElementById('githubUsername')
    if (state.github.connected && state.github.username) {
      if (githubUsername) githubUsername.textContent = '@' + state.github.username
    } else {
      if (githubUsername) githubUsername.textContent = 'Connect'
    }
  })
})
</script>
