          <span id="githubUsername" class="text-xs text-monokai-gray">Connect</span>
        </button>

        <!-- Settings -->
        <button
          id="settingsBtn"
          class="w-10 h-10 flex items-center justify-center bg-monokai-bg-dark border border-monokai-border rounded-lg cursor-pointer hover:border-monokai-gray transition-colors"
          title="Settings"
        >
          <svg class="w-5 h-5" fill="none" stroke="#727072" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
        </button>
      </div>
    </div>
  </header>
</template>

<script client>
(() => {
  const API_BASE_URL = 'http://localhost:3008/voide';

  const DRIVERS = {
    'claude-sdk': { name: 'Claude Agent SDK', requiresKey: null },
    'openai': { name: 'OpenAI', requiresKey: 'OPENAI_API_KEY' },
    'ollama': { name: 'Ollama', requiresKey: null },
    'mock': { name: 'Mock', requiresKey: null }
  };

  function init() {
    const stores = window.VoideStores;
    if (!stores) {
      setTimeout(init, 10);
      return;
    }

    const { appStore, appActions, chatStore, chatActions, settingsStore, settingsActions, uiActions } = stores;

    // DOM Elements
    const repoInput = document.getElementById('repoInput');
    const cloneBtn = document.getElementById('cloneBtn');
    const aiDriver = document.getElementById('aiDriver');
    const githubAccount = document.getElementById('githubAccount');
    const settingsBtn = document.getElementById('settingsBtn');
    const githubUsername = document.getElementById('githubUsername');
    const appTitle = document.getElementById('appTitle');

    console.log('[VoideHeader] Initialized');

    // =========================================================================
    // Helper Functions
    // =========================================================================

    function checkBackendAPI() {
      return fetch(API_BASE_URL + '/state')
        .then(res => res.ok)
        .catch(() => false);
    }

    function saveChat() {
      const app = appStore.get();
      chatActions.saveCurrentChat(app.repoPath, app.currentDriver);
    }

    function addMessage(type, content, header) {
      const app = appStore.get();
      const driverName = DRIVERS[app.currentDriver]?.name || 'AI';
      const headerText = header || (type === 'user' ? 'You' : type === 'assistant' ? driverName : type === 'system' ? 'System' : 'Error');
      chatActions.addMessage(type, content, headerText);
      saveChat();
    }

    // =========================================================================
    // Repo Actions
    // =========================================================================

    function handleRepoAction() {
      const inputValue = repoInput?.value.trim() || '';

      if (!inputValue) {
        addMessage('error', 'Please enter a repository URL or path.');
        return;
      }

      checkBackendAPI().then(hasBackend => {
        if (hasBackend) {
          return fetch(API_BASE_URL + '/repo', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ input: inputValue })
          }).then(res => res.json());
        }
        // No backend - return path info for validation
        return {
          success: true,
          noBackend: true,
          data: {
            repo: { path: inputValue, name: inputValue.split('/').pop(), branch: 'main' }
          }
        };
      }).then(response => {
        const data = response.data || response;
        const repo = data.repo;

        if (repo) {
          // If no backend, we can't validate the path exists
          // Store it but warn the user that validation requires backend
          if (response.noBackend) {
            addMessage('system', 'Set working directory to "' + repo.name + '"\nPath: ' + repo.path + '\n\nNote: Path validation requires the Voide backend. Start it with `bun run server`.');
          } else {
            addMessage('system', 'Opened "' + repo.name + '"\nPath: ' + repo.path + '\nBranch: ' + repo.branch);
          }
          appActions.setRepoPath(repo.path);
          settingsActions.setLastRepoPath(repo.path);
          saveChat();
          appActions.setTerminalTitle('Voide - ' + repo.name);
        } else if (response.error) {
          throw new Error(response.error);
        } else {
          throw new Error('Failed to open repository');
        }
      }).catch(error => {
        addMessage('error', 'Failed: ' + error.message);
        // Clear invalid path from input and storage
        if (repoInput) repoInput.value = '';
        appActions.setRepoPath('');
        settingsActions.setLastRepoPath('');
      });
    }

    function handleDriverChange(e) {
      const driver = e.target.value;
      appActions.setDriver(driver);
      addMessage('system', 'Switched to ' + (DRIVERS[driver]?.name || driver));
    }

    // =========================================================================
    // Modal Openers
    // =========================================================================

    function openGithubModal() {
      uiActions.openModal('github');
    }

    function openSettingsModal() {
      uiActions.openModal('settings');
    }

    // =========================================================================
    // Event Bindings
    // =========================================================================

    repoInput?.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') handleRepoAction();
    });
    cloneBtn?.addEventListener('click', handleRepoAction);
    aiDriver?.addEventListener('change', handleDriverChange);
    githubAccount?.addEventListener('click', openGithubModal);
    settingsBtn?.addEventListener('click', openSettingsModal);

    // =========================================================================
    // State Subscriptions
    // =========================================================================

    // Update GitHub username display
    settingsStore.subscribe((state) => {
      if (githubUsername) {
        githubUsername.textContent = (state.github.connected && state.github.username)
          ? '@' + state.github.username
          : 'Connect';
      }
    });

    // Update app title
    appStore.subscribe((state) => {
      if (appTitle && state.terminalTitle) {
        const title = state.terminalTitle.replace('Voide - ', '');
        if (title !== 'Voide') {
          appTitle.textContent = title;
        }
      }

      // Keep repo input synced with store
      if (repoInput && state.repoPath && !repoInput.value) {
        repoInput.value = state.repoPath;
      }
    });

    // Restore repo path on init
    const app = appStore.get();
    if (app.repoPath && repoInput) {
      repoInput.value = app.repoPath;
    } else {
      const settings = settingsStore.get();
      if (settings.lastRepoPath && repoInput) {
        appActions.setRepoPath(settings.lastRepoPath);
        repoInput.value = settings.lastRepoPath;
      }
    }

    // Expose to window.voide
    window.voide = window.voide || {};
    Object.assign(window.voide, {
      handleRepoAction,
      handleDriverChange,
      openGithubModal,
      openSettingsModal
    });
  }

  init();
})();
</script>
