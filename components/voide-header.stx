      </div>

      <!-- Right Controls -->
      <div class="flex items-center gap-3">
        <!-- AI Driver -->
        <div class="relative inline-flex items-center">
          <select
            id="aiDriver"
            class="appearance-none bg-monokai-bg-dark border border-monokai-border rounded-lg py-2 pl-3 pr-8 text-sm text-monokai-fg cursor-pointer outline-none hover:border-monokai-gray transition-colors focus:border-monokai-purple focus:ring-0 select-none"
            style="-webkit-appearance: none; -moz-appearance: none;"
          >
            <option value="claude-sdk" selected class="bg-monokai-bg-dark text-monokai-fg">Claude SDK</option>
            <option value="openai" class="bg-monokai-bg-dark text-monokai-fg">OpenAI</option>
            <option value="ollama" class="bg-monokai-bg-dark text-monokai-fg">Ollama</option>
            <option value="mock" class="bg-monokai-bg-dark text-monokai-fg">Mock</option>
