          <!-- API Status -->
          <div class="p-4 bg-monokai-bg-dark border border-monokai-border rounded-xl space-y-2">
            <div class="flex items-center gap-3">
              <span @ref="anthropicStatus" class="w-2 h-2 rounded-full" @class="{ 'bg-monokai-green': anthropicConfigured(), 'bg-monokai-gray': !anthropicConfigured() }"></span>
              <span class="text-sm text-monokai-gray">Anthropic: <span @ref="anthropicStatusText" class="text-monokai-fg/80">Not configured</span></span>
            </div>
            <div class="flex items-center gap-3">
              <span @ref="openaiStatus" class="w-2 h-2 rounded-full" @class="{ 'bg-monokai-green': openaiConfigured(), 'bg-monokai-gray': !openaiConfigured() }"></span>
              <span class="text-sm text-monokai-gray">OpenAI: <span @ref="openaiStatusText" class="text-monokai-fg/80">Not configured</span></span>
