  </div>

<script client>
import { appStore, settingsStore, uiStore, chatStore } from '@stores'

const { state } = window.stx
const githubModalOpen = state<boolean>(false)
const settingsModalOpen = state<boolean>(false)
const githubConnected = state<boolean>(false)
const anthropicConfigured = state<boolean>(false)
const openaiConfigured = state<boolean>(false)

const refs = STX.useRefs()

console.log('[VoideModals] Initialized, refs:', Object.keys(refs))

  // =========================================================================
  // Helper Functions
  // =========================================================================

  function addMessage(type, content, header) {
    const headerText = header || (type === 'user' ? 'You' : type === 'assistant' ? 'AI' : type === 'system' ? 'System' : 'Error')
    chatStore.addMessage(type, content, headerText)
  }

  // =========================================================================
  // Modal Open/Close
  // =========================================================================

  function openGithubModal() {
    uiStore.openModal('github')
  }

  function closeGithubModal() {
    uiStore.closeModal('github')
  }

  function openSettingsModal() {
    uiStore.openModal('settings')
  }

  function closeSettingsModal() {
    uiStore.closeModal('settings')
  }

  // =========================================================================
  // Project Path
  // =========================================================================

  const API_BASE_URL = 'http://localhost:3008/voide'

  function setProjectPath() {
    const input = refs.projectPathInput
    const path = input ? input.value.trim() : ''

    if (!path) {
      addMessage('error', 'Please enter a project path.')
      return
    }

    appStore.setRepoPath(path)
    settingsStore.setLastRepoPath(path)
    addMessage('system', 'Project set to: ' + path.split('/').pop())
    closeSettingsModal()
  }

  function browseForFolder() {
    fetch(API_BASE_URL + '/browse', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({})
    })
    .then(res => res.json())
    .then(data => {
      if (data.path) {
        const input = refs.projectPathInput
        if (input) input.value = data.path
      } else if (data.error) {
        addMessage('error', data.error)
      }
    })
    .catch(error => {
      addMessage('error', 'Browse failed. Make sure the backend is running.')
    })
  }

  // Pre-fill project path
  if (refs.projectPathInput && appStore.repoPath) {
    refs.projectPathInput.value = appStore.repoPath
  }

  // =========================================================================
  // API Settings
  // =========================================================================

  function saveSettings() {
    // Save project path
    const projectInput = refs.projectPathInput
    const path = projectInput ? projectInput.value.trim() : ''
    if (path) {
      appStore.setRepoPath(path)
      settingsStore.setLastRepoPath(path)
    }

    // Save API keys
    const anthropicInput = refs.anthropicApiKey
    const openaiInput = refs.openaiApiKey
    const claudeHostInput = refs.claudeCliHost

    settingsStore.setAllApiKeys({
      anthropic: anthropicInput ? anthropicInput.value.trim() || null : null,
      openai: openaiInput ? openaiInput.value.trim() || null : null,
      claudeCliHost: claudeHostInput ? claudeHostInput.value.trim() || null : null
    })

    closeSettingsModal()
    addMessage('system', path ? 'Settings saved. Project: ' + path.split('/').pop() : 'Settings saved.')
  }

  // =========================================================================
  // GitHub Connection
  // =========================================================================

  function connectGithub() {
    const tokenInput = refs.githubToken
    const nameInput = refs.gitName
    const emailInput = refs.gitEmail

    const token = tokenInput ? tokenInput.value.trim() : ''
    if (!token) {
      addMessage('error', 'Please enter a GitHub personal access token.')
      return
    }

    fetch('https://api.github.com/user', {
      headers: {
        'Authorization': 'token ' + token,
        'Accept': 'application/vnd.github.v3+json'
      }
    })
    .then((res) => {
      if (!res.ok) throw new Error('Invalid token')
      return res.json()
    })
    .then(function(user) {
      settingsStore.connectGithub({
        token: token,
        username: user.login,
        name: nameInput ? nameInput.value.trim() || user.name : user.name,
        email: emailInput ? emailInput.value.trim() || user.email : user.email,
        avatarUrl: user.avatar_url
      })
      addMessage('system', 'Connected to GitHub as @' + user.login)
      closeGithubModal()
    })
    .catch((error) => {
      addMessage('error', 'GitHub connection failed: ' + error.message)
    })
  }

  function disconnectGithub() {
    settingsStore.disconnectGithub()
    addMessage('system', 'Disconnected from GitHub.')
    closeGithubModal()
  }

  // =========================================================================
  // State Subscriptions
  // =========================================================================

  // Update modal visibility based on UI state
  uiStore.$watch(s => s.modals, (modals) => {
    githubModalOpen.set(modals.github)
    settingsModalOpen.set(modals.settings)
  })

  // Watch GitHub connection state
  settingsStore.$watch(s => s.github, (github) => {
    githubConnected.set(github.connected)

    if (github.connected) {
      const connectedAvatar = refs.connectedAvatar
      const connectedName = refs.connectedName
      const connectedUsername = refs.connectedUsername
      if (connectedAvatar) connectedAvatar.src = github.avatarUrl || ''
      if (connectedName) connectedName.textContent = github.name || github.username
      if (connectedUsername) connectedUsername.textContent = '@' + github.username
    }

    // Pre-fill git inputs
    const gitNameInput = refs.gitName
    const gitEmailInput = refs.gitEmail
    if (gitNameInput && github.name && !gitNameInput.value) {
      gitNameInput.value = github.name
    }
    if (gitEmailInput && github.email && !gitEmailInput.value) {
      gitEmailInput.value = github.email
    }
  })

  // Watch API key changes
  settingsStore.$watch(s => s.apiKeys, (apiKeys) => {
    const anthropicInput = refs.anthropicApiKey
    const openaiInput = refs.openaiApiKey
    const claudeHostInput = refs.claudeCliHost

    if (anthropicInput && apiKeys.anthropic && !anthropicInput.value) {
      anthropicInput.value = apiKeys.anthropic
    }
    if (openaiInput && apiKeys.openai && !openaiInput.value) {
      openaiInput.value = apiKeys.openai
    }
    if (claudeHostInput && apiKeys.claudeCliHost && !claudeHostInput.value) {
      claudeHostInput.value = apiKeys.claudeCliHost
    }

    anthropicConfigured.set(!!apiKeys.anthropic)
    openaiConfigured.set(!!apiKeys.openai)

    const anthropicStatusText = refs.anthropicStatusText
    const openaiStatusText = refs.openaiStatusText
    if (anthropicStatusText) {
      anthropicStatusText.textContent = apiKeys.anthropic ? 'Configured' : 'Not configured'
    }
    if (openaiStatusText) {
      openaiStatusText.textContent = apiKeys.openai ? 'Configured' : 'Not configured'
    }
  })

  // Initialize settings from persisted state
  const initSettings = settingsStore.$state
  githubConnected.set(initSettings.github.connected)
  anthropicConfigured.set(!!initSettings.apiKeys.anthropic)
  openaiConfigured.set(!!initSettings.apiKeys.openai)

  // =========================================================================
  // Global Escape Key Handler
  // =========================================================================

  STX.onKey('Escape', () => {
    uiStore.closeAllModals()
  })

</script>
